<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/titleFragment">

    <fragment
        android:id="@+id/titleFragment"
        android:name="me.wierdest.affirmative.title.TitleFragment"
        android:label="TitleFragment"
        tools:layout="@layout/fragment_title" >
        <action
            android:id="@+id/action_titleFragment_to_readerFragment"
            app:destination="@id/readerFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="me.wierdest.affirmative.settings.SettingsFragment"
        android:label="SettingsFragment" />
    <fragment
        android:id="@+id/featsFragment"
        android:name="me.wierdest.affirmative.feats.FeatsFragment"
        android:label="FeatsFragment"
        tools:layout="@layout/fragment_feats"/>
    <fragment
        android:id="@+id/readerFragment"
        android:name="me.wierdest.affirmative.reader.ReaderFragment"
        android:label="ReaderFragment"
        tools:layout="@layout/fragment_reader"/>
    <fragment
        android:id="@+id/resultFragment"
        android:name="me.wierdest.affirmative.result.ResultFragment"
        android:label="ResultFragment"
        tools:layout="@layout/fragment_result"/>
</navigation>